
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="">
    <div class="x_panel">
        <div class="x_title">

            <div class="row">

                <div class="col-md-3">

                    <h6 class="Header"><i class="fa fa-user"></i> User Manager</h6>
                </div>
                <div class="col-md-9">
                    <button type="button" class="btn btn-success btn-sm  pull-right" data-toggle="modal" data-target="#CreateUserModal" data-backdrop="static" data-keyboard="false"><i class="fa fa-plus-circle"></i> </button>
                </div>

            </div>


            <div class="clearfix"></div>
        </div>
        <div class="x_content">


            <div class="">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card-box table-responsive">


                            <table id="tblUsers" class="table table-striped table-bordered dt-responsive nowrap table-sm" cellspacing="0" width="100%">

                                <thead>
                                    <tr>

                                        <th scope="col">No</th>
                                        <th scope="col">Email</th>
                                        <th scope="col">Phone Number</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">Last Name</th>

                                        <th scope="col">Account Status</th>
                                        <th scope="col">Entry Date</th>
                                        <th scope="col">Action</th>

                                    </tr>
                                </thead>

                            </table>

                        </div>
                    </div>
                </div>
            </div>




        </div>
    </div>
</div>


<div class="modal fade" id="CreateUserModal" tabindex="-1" role="dialog" aria-labelledby="CreateUserModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title Title" id="CreateUserModalLabel">Create Account</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <form id="frmCreateAccount">

                    <div class="form-group col-md-4">
                        <label for="exampleInputEmail1">First Name</label>
                        <input type="email" class="form-control" id="txtFirstName" name="FirstName" aria-describedby="emailHelp">
                    </div>
                    <div class="form-group col-md-4">
                        <label for="exampleInputEmail1">Last Name</label>
                        <input type="email" class="form-control" id="txtLastName" name="LastName" aria-describedby="emailHelp">
                    </div>
                    <div class="form-group col-md-4">
                        <label for="exampleInputEmail1">Phone Number</label>
                        <input type="email" class="form-control" id="txtPhoneNumber" name="PhoneNumber" aria-describedby="emailHelp">
                    </div>

                    <div class="form-group col-md-4">
                        <label for="exampleInputEmail1">Email</label>
                        <input type="email" class="form-control" id="txtEmail" name="Email" aria-describedby="emailHelp">
                    </div>

                    <div class="form-group col-md-4">
                        <label for="exampleInputEmail1">Select Role</label>
                        <select class="form-control" name="RoleName">
                            @if (ViewBag.Roles != null)
                            {
                                foreach (var item in ViewBag.Roles)
                                {
                                    <option value="@item.Name">@item.Name</option>
                                }
                            }

                        </select>
                    </div>

                    <div class="form-group col-md-4">
                        <label for="exampleInputEmail1">Town</label>
                        <input type="text" class="form-control" id="txtEmail" name="Town" aria-describedby="emailHelp">
                    </div>

                    <div class="form-group col-md-4">
                        <label for="exampleInputEmail1">Select County</label>
                        <select class="form-control" name="County">
                            @if (ViewBag.Counties != null)
                            {
                                foreach (var item in ViewBag.Counties)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            }

                        </select>
                    </div>

                    <div class="form-group col-md-4">
                        <label for="exampleInputEmail1">Select Gender</label>
                        <select class="form-control" name="Gender">

                            <option value="Male">Male</option>
                            <option value="Female">Female</option>


                        </select>
                    </div>



                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success" id="btnSubmit">Submit</button>
            </div>
        </div>
    </div>
</div>

<div id="divLoader" style="display:none;" class="loader">

    <img src="~/loaders/loading-23.gif" alt="Loader" style="width:20em;" />

</div>

<style>

    .success {
        background: #26B99A;
        color: #fff;
    }

    .danger {
        color: #fff;
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .Header {
        font-weight: 600;
        color: #45ca9f;
        font-size: 1.1rem;
        max-width: calc(100% - 40px);
    }


    .loader {
        position: fixed;
        width: 256px;
        height: 256px;
        top: 50%;
        left: 50%;
        margin: -128px 0 0 -128px;
        z-index: 1000;
    }

    .Title {
        font-weight: 600;
        color: #45ca9f;
        font-size: 1.5rem;
        line-height: 70px;
        max-width: calc(100% - 40px);
    }
</style>


<script src="~/Scripts/jquery-3.5.1.js"></script>
<link href="~/sweetalart/sweetalert.min.css" rel="stylesheet" />
<script src="~/sweetalart/sweetalert.min.js"></script>

<script>
    $(document).ready(function () {

        GetAllData();


    });


    function GetAllData() {
        debugger
        var t = $('#tblUsers').DataTable({
            "ajax": {
                "url": "/Admin/UserManager/GetUsers",
                "type": "GET",
                "datatype": "json",

            },

            "columns": [
                { "data": "id" },
                { "data": "email" },
                { "data": "phoneNumber" },
                { "data": "firstName" },
                { "data": "lastName" },
                { "data": "isActive" },
                { "data": "newCreateDate" },


                {
                    data: null,
                    mRender: function (data, type, row) {
                        return "<a href='#' class='btn-sm success'    onclick=FetchUserDetails('" + row.Id + "'); > Manage Account</a>";

                    }
                }

            ]
           
        });

        t.on('order.dt search.dt', function () {
            t.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                cell.innerHTML = i + 1;
            });
        }).draw();

    }

    function RegenerateCredentials(e) {

        var id = e;

        console.log(id);


        swal(

            {
                title: "Are you sure?",

                //text: "Once deleted, you will not be able to recover this  file!",

                type: "success",

                showCancelButton: true,

                confirmButtonColor: "##62b76e",

                confirmButtonText: "Yes, Procceed!",

                closeOnConfirm: false
            },

            function () {

                $.ajax({

                    type: "GET",

                    url: "/Admin/UserManagement/ResendAccountLogins/" + id,

                    success: function (response) {

                        if (response.success) {

                            swal({

                                position: 'top-end',

                                type: "success",

                                title: response.responseText,

                                showConfirmButton: false,

                                // timer: 2000,

                            });
                            setTimeout(function () { location.reload(); }, 3000);

                        }

                        else {
                            swal({
                                position: 'top-end',
                                type: "error",
                                title: response.responseText,
                                showConfirmButton: true,
                                timer: 5000,
                            });

                        }

                    },
                    error: function (response) {
                        swal({
                            position: 'top-end',
                            type: "error",
                            title: "Server error ,kindly contact the admin for assistance",
                            showConfirmButton: false,
                            timer: 5000,
                        });

                    }

                })

            }
        );
    }


    function DisableAccount(e) {

        var id = e;

        console.log(id);


        swal(

            {
                title: "Are you sure?",

                text: "Once deleted, you will not be able to recover this  file!",

                type: "success",

                showCancelButton: true,

                confirmButtonColor: "##62b76e",

                confirmButtonText: "Yes, Procceed!",

                closeOnConfirm: false
            },

            function () {

                $.ajax({

                    type: "GET",

                    url: "/Admin/UserManagement/DisableAccount/" + id,

                    success: function (response) {

                        if (response.success) {

                            swal({

                                position: 'top-end',

                                type: "success",

                                title: response.responseText,

                                showConfirmButton: false,

                                // timer: 2000,

                            });
                            setTimeout(function () { location.reload(); }, 3000);

                        }

                        else {
                            swal({
                                position: 'top-end',
                                type: "error",
                                title: response.responseText,
                                showConfirmButton: true,
                                timer: 5000,
                            });

                        }

                    },
                    error: function (response) {
                        swal({
                            position: 'top-end',
                            type: "error",
                            title: "Server error ,kindly contact the admin for assistance",
                            showConfirmButton: false,
                            timer: 5000,
                        });

                    }

                })

            }
        );
    }

    $("#btnSubmit").click(function () {

        if ($('#txtFirstName').val() == '') {
            $('#txtFirstName').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "First name is required",
                showConfirmButton: true,
            });

            return false;
        }

        if ($('#txtLastName').val() == '') {
            $('#txtLastName').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Last name is required",
                showConfirmButton: true,
            });

            return false;
        }

        if ($('#txtPhoneNumber').val() == '') {
            $('#txtPhoneNumber').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Phone number is required",
                showConfirmButton: true,
            });

            return false;
        }

        if ($('#txtEmail').val() == '') {
            $('#txtEmail').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Email is required",
                showConfirmButton: true,
            });

            return false;
        }

        $("#divLoader").show();
        $("#CreateUserModal").modal('hide');

        var data = $("#frmCreateAccount").serialize();

        $.ajax({

            type: "POST",
            url: "/Admin/UserManager/RegisterUser/", // NB: Use the correct action name
            data: data,

            success: function (response) {
                if (response.success) {
                    // Display success message
                    swal({
                        position: 'top-end',
                        type: "success",
                        title: response.responseText,
                        showConfirmButton: false,
                        // timer: 5000,

                    }), setTimeout(function () { location.reload(); }, 3000);

                } else {
                    // Display error message
                    swal({
                        position: 'top-end',
                        type: "error",
                        title: response.responseText,
                        showConfirmButton: true,
                        timer: 5000,
                    });

                }
            },

            // Display error message from db
            error: function (response) {
                alert("error!");  //

            }
        })

    })

    $("#btnEditSubmit").click(function () {

        if ($('#txtBrandName').val() == '') {
            $('#txtBrandName').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Please enter Brand Name",
                showConfirmButton: true,
            });

            return false;
        }

        $("#UpdateBrandModal").modal('hide');

        var data = $("#frmUpdateBrand").serialize();
        $.ajax({

            type: "POST",
            url: "/Admin/Brand/UpdateBrand", // NB: Use the correct action name
            data: data,

            success: function (response) {
                if (response.success) {
                    // Display success message
                    swal({
                        position: 'top-end',
                        type: "success",
                        title: response.responseText,
                        showConfirmButton: false,
                        // timer: 5000,

                    }), setTimeout(function () { location.reload(); }, 3000);

                } else {
                    // Display error message
                    swal({
                        position: 'top-end',
                        type: "error",
                        title: response.responseText,
                        showConfirmButton: true,
                        timer: 5000,
                    });

                }
            },

            // Display error message from db
            error: function (response) {
                alert("error!");  //

            }
        })

    })


    function FetchUserDetails(e) {

        var UserId = e;

        window.location.href = "/Admin/UserManager/UserProfile?Id=" + UserId;

    }




</script>


