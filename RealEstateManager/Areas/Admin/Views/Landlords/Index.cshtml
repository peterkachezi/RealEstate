
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- Our Products Table -->
<div class="col-md-12 col-sm-12 ">
    <div class="x_panel">
        <div class="x_title">

            <div class="row">

                <div class="col-md-3">

                    <h6 class="Title"><i class="fa fa-users"></i> Students</h6>
                </div>


                <div class="col-md-9">
                    <button type="button" class="btn btn-success btn-sm  pull-right" data-toggle="modal" data-target="#ModalAddLandlord" data-backdrop="static" data-keyboard="false"><i class="fa fa-plus-circle"></i>  </button>
                </div>


            </div>


            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card-box table-responsive">


                        <table id="tblStudents" class="table table-striped table-bordered dt-responsive nowrap table-sm" cellspacing="0" width="100%">

                            <thead>
                                <tr>
                                    <th scope="col">No</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Current Class</th>
                                    <th scope="col">Current Stream</th>
                                    <th scope="col">Birth Cert No</th>
                                    <th scope="col">Class Teacher</th>

                                    <th scope="col">Entry Date</th>





                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<div class="modal fade" id="ModalAddLandlord" tabindex="-1" role="dialog" aria-labelledby="ModalCreateDepartment" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title Header" id="ModalCreateDepartment"> Register Landlord</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">


                <form id="userForm" name="userForm" class="form-horizontal" enctype="multipart/form-data">

                    <div class="row col-md-12">
                    
                        <div class="col-sm-12">
                            <div class="form-group">
                                <h6 class="Title">Landlord' s Details</h6>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label>First Name</label>
                                <input type="text" name="FirstName" class="form-control" />
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Last Name</label>
                                <input type="text" name="LastName" class="form-control" />
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Phone Number</label>
                                <input type="text" name="PhoneNumber" class="form-control" />
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label>National ID</label>
                                <input type="text" name="IdNumber" class="form-control" />
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Email </label>
                                <input type="email" class="form-control" id="txtEmail" name="Email" aria-describedby="emailHelp">
                            </div>
                        </div>



                        <div class="col-md-6 col-sm-6">
                            <label for="middle-name" class="">Select County</label>
                            <div class="">
                                <select class="form-control" id="txtBodyId" name="BodyTypeId">
                                    @if (ViewBag.County != null)
                                    {
                                        foreach (var item in ViewBag.County)
                                        {
                                            <option value="@item.Id">@item.Name</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>


                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Town</label>
                                <input type="email" class="form-control" id="txtEmail" name="Town" aria-describedby="emailHelp">
                            </div>
                        </div>




                        <br />
                        <br />
                        <br />
                        <br />


                        <div class="col-sm-12">
                            <div class="form-group">
                                <h6 class="Title">Next of Kin Details</h6>
                            </div>
                        </div>


                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="exampleInputEmail1">First Name</label>
                                <input type="email" class="form-control" id="txtFirstName" name="KinFirstName" aria-describedby="emailHelp">
                            </div>
                        </div>

                        <div class="col-sm-6">

                            <div class="form-group">
                                <label for="exampleInputEmail1">Last Name</label>
                                <input type="email" class="form-control" id="txtLastName" name="KinLastName" aria-describedby="emailHelp">
                            </div>
                        </div>

                        <div class="col-sm-6">

                            <div class="form-group">
                                <label for="exampleInputEmail1">Phone Number</label>
                                <input type="email" class="form-control" id="txtLastName" name="KinPhoneNumber" aria-describedby="emailHelp">
                            </div>
                        </div>


                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="middle-name">Select Relationship</label>
                                <select class="form-control" id="txtKinRelationship" name="KinRelationship">
                                    <option value="Spouse">Spouse</option>
                                    <option value="Son">Son</option>
                                    <option value="Daughter ">Daughter </option>
                                </select>

                            </div>
                        </div>




                    </div>

                    <div class="modal-footer mb-1">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                        <button type="button" id="btnSubmit" class="btn btn-success">Submit</button>
                    </div>
                </form>
            </div>

           
        </div>
    </div>
</div>




<div id="divLoader" style="display:none;" class="loader">
    <img src="~/loaders/loading-23.gif" alt="Loader" style="width:20em;" />
</div>

<script src="~/Scripts/jquery-3.5.1.js"></script>
<link href="~/sweetalart/sweetalert.min.css" rel="stylesheet" />
<script src="~/sweetalart/sweetalert.min.js"></script>


<style>

    .success {
        background: #26B99A;
        color: #fff;
    }

    .danger {
        color: #fff;
        background-color: #dc3545;
        border-color: #dc3545;
    }
    .loader {
        position: fixed;
        width: 256px;
        height: 256px;
        top: 50%;
        left: 50%;
        margin: -128px 0 0 -128px;
        z-index: 1000;
    }

    .Title {
        font-weight: 600;
        color: #45ca9f;
        font-size: 1.3rem;
        max-width: calc(100% - 40px);
    }
</style>




<script>


    $(document).ready(function () {
        GetAllData();

    });

    function GetAllData() {


        var t = $('#tblStudents').DataTable({
            "ajax": {
                "url": "/Teacher/Students/GetStudents",
                "type": "GET",
                "datatype": "json"
            },

            "columns": [

                { "data": "Id" },
                { "data": "FullName" },
                { "data": "ClassName" },
                { "data": "EntryStreamName" },
                { "data": "BirthCertNo" },
                { "data": "TeacherName" },
                { "data": "NewCreateDate" },

                {
                    data: null,
                    mRender: function (data, type, row) {
                        return "<a href='#' class='btn-sm success'    onclick=GetRecord('" + row.Id + "'); >Edit</a> / <a href='#' class='btn-sm danger'    onclick=DeleteRecord('" + row.Id + "'); >Delete</a>";

                    }
                }

            ]

        });
        t.on('order.dt search.dt', function () {
            t.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                cell.innerHTML = i + 1;
            });
        }).draw();
    }


    $("#btnSubmit").click(function () {

        if ($('#txtFirstName').val() == '') {
            $('#txtFirstName').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Please enter First Name",
                showConfirmButton: true,
            });

            return false;
        }

        if ($('#txtLastName').val() == '') {
            $('#txtLastName').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Please enter Last Name",
                showConfirmButton: true,
            });

            return false;
        }


        if ($('#txtPhoneNumber').val() == '') {
            $('#txtPhoneNumber').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Please enter Phone Number",
                showConfirmButton: true,
            });

            return false;
        }

        if ($('#txtEmail').val() == '') {
            $('#txtEmail').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Please enter Email",
                showConfirmButton: true,
            });

            return false;
        }
              

        $("#ModalAddLandlord").modal('hide');

        $("#divLoader").show();

        var formData = new FormData($('#frmAddStudents').get(0));

        $.ajax({
            type: "POST",
            url: "/Admin/Landlords/Create", // NB: Use the correct action name
            data: formData,
            dataType: 'json',
            contentType: false,
            processData: false,


            success: function (response) {
                if (response.success) {

                    swal({
                        title: "Success!",
                        text: response.responseText,
                        type: "success"
                    }), setTimeout(function () { location.reload(); }, 3000);

                    $("#ModalAddLandlord").modal('show');

                } else {

                    swal({
                        position: 'top-end',
                        type: "error",
                        title: response.responseText,
                        showConfirmButton: true,
                        timer: 5000,
                    });

                }

                $("#divLoader").hide();
            },


            error: function (error) {
                alert("errror");
            }
        });

    });

    function DeleteRecord(e) {

        var id = e;

        console.log(id);


        swal(

            {
                title: "Are you sure?",

                text: "Once deleted, you will not be able to recover this  file!",

                type: "success",

                showCancelButton: true,

                confirmButtonColor: "##62b76e",

                confirmButtonText: "Yes, Procceed!",

                closeOnConfirm: false
            },

            function () {

                $.ajax({

                    type: "GET",

                    url: "/Admin/Students/Delete/" + id,

                    success: function (response) {

                        if (response.success) {

                            swal({

                                position: 'top-end',

                                type: "success",

                                title: response.responseText,

                                showConfirmButton: false,

                                // timer: 2000,

                            });
                            setTimeout(function () { location.reload(); }, 3000);

                        }

                        else {
                            swal({
                                position: 'top-end',
                                type: "error",
                                title: response.responseText,
                                showConfirmButton: true,
                                timer: 5000,
                            });

                        }

                    },



                    error: function (response) {
                        swal({
                            position: 'top-end',
                            type: "error",
                            title: "Server error ,kindly contact the admin for assistance",
                            showConfirmButton: false,
                            timer: 5000,
                        });

                    }

                })

            }
        );
    }

    function GetStreams() {

        var classId = $('#txtSelectedStream').val();

        console.log(classId);

        $.ajax({
            type: "GET",
            url: "/Teacher/Students/GetStreams/" + classId,
            data: "{}",

            success: function (data) {
                var s = '<option value="-1">Please Select Stream</option>';
                for (var i = 0; i < data.length; i++) {
                    s += '<option value="' + data[i].StreamId + '">' + data[i].StreamName + '</option>';
                }
                $("#txtStreamId").html(s);

                console.log(data);
            }


        });
    }

    function GetStreams1() {

        var classId = $('#txtSelectedStream1').val();

        console.log(classId);

        $.ajax({
            type: "GET",
            url: "/Teacher/Students/GetStreams/" + classId,
            data: "{}",

            success: function (data) {
                var s = '<option value="-1">Please Select Stream</option>';
                for (var i = 0; i < data.length; i++) {
                    s += '<option value="' + data[i].StreamId + '">' + data[i].StreamName + '</option>';
                }
                $("#txtStreamId1").html(s);

                console.log(data);
            }


        });
    }



    function GetRecord(e) {

        var id = e;

        $.get("/Teacher/Students/GetById/?Id=" + id, function (data, status) {

            console.log(data);

            if (data == null) {
                alert("Does not exist");
            } else {

                $("#txtId").val(data.data.Id);
                $("#txtParentId").val(data.data.ParentId);
                $("#txtFirstName1").val(data.data.FirstName);
                $("#txtMiddleName1").val(data.data.MiddleName);
                $("#txtLastName1").val(data.data.LastName);
                $("#txtBirthCertNo1").val(data.data.BirthCertNo);
                $("#txtSelectedStream1").val(data.data.EntryStreamId);
                $("#txtPrimarySchoolName1").val(data.data.PrimarySchoolName);
                $("#txtParentFirstName").val(data.data.ParentFirstName);
                $("#txtParentLastName").val(data.data.ParentLastName);
                $("#txtPhoneNumber1").val(data.data.PhoneNumber);
                $("#txtCountyId1").val(data.data.CountyId);
                $("#txtTown1").val(data.data.Town);
                $("#txtEmailAddress1").val(data.data.EmailAddress);


                $('#ModalUpdateStudent').modal({ backdrop: 'static', keyboard: false })
                $("#ModalUpdateStudent").modal('show');
            }

        });
    };


    //Allow users to enter numbers only
    $(".numericOnly").bind('keypress', function (e) {
        if (e.keyCode == '9' || e.keyCode == '16') {
            return;
        }
        var code;
        if (e.keyCode) code = e.keyCode;
        else if (e.which) code = e.which;
        if (e.which == 46)
            return false;
        if (code == 8 || code == 46)
            return true;
        if (code < 48 || code > 57)
            return false;
    });

    //Disable paste
    $(".numericOnly").bind("paste", function (e) {
        e.preventDefault();
    });

    $(".numericOnly").bind('mouseenter', function (e) {
        var val = $(this).val();
        if (val != '0') {
            val = val.replace(/[^0-9]+/g, "")
            $(this).val(val);
        }
    });



</script>




