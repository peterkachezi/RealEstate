
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- Our Products Table -->
<div class="col-md-12 col-sm-12 ">
    <div class="x_panel">
        <div class="x_title">

            <div class="row">

                <div class="col-md-3">

                    <h6 class="Title"><i class="fa fa-users"></i> Tenants</h6>
                </div>


                <div class="col-md-9">
                    <button type="button" class="btn btn-success btn-sm  pull-right" data-toggle="modal" data-target="#ModalAddTenant" data-backdrop="static" data-keyboard="false"><i class="fa fa-plus-circle"></i>  </button>
                </div>


            </div>


            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card-box table-responsive">


                        <table id="tblStudents" class="table table-striped table-bordered dt-responsive nowrap table-sm" cellspacing="0" width="100%">

                            <thead>
                                <tr>
                                    <th scope="col">No</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Phone Number</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">County</th>
                                    <th scope="col">Created By</th>
                                    <th scope="col">Entry Date</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




<div class="modal fade" id="ModalAddTenant" tabindex="-1" role="dialog" aria-labelledby="ModalCreateDepartment" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title Header" id="ModalCreateDepartment"> Register Tenant</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <form id="frmAddtenant" name="userForm" class="form-horizontal" enctype="multipart/form-data">

                    <div class="row col-md-12">


                        <div class="col-sm-12">
                            <div class="form-group">
                                <h6 class="Title">Tenant' s Details</h6>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label>First Name</label>
                                <input type="text" id="txtFirstName" name="FirstName" class="form-control" />
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Last Name</label>
                                <input type="text" id="txtLastName" name="LastName" class="form-control" />
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Phone Number</label>
                                <input type="text" id="txtPhoneNumber" name="PhoneNumber" class="form-control" />
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label>National ID</label>
                                <input type="text" id="txtIdNumber" name="IdNumber" class="form-control" />
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Email Address</label>
                                <input type="email" class="form-control" id="txtEmail" name="Email" aria-describedby="emailHelp">
                            </div>
                        </div>



                        <div class="col-md-6 col-sm-6">
                            <label for="middle-name" class="">Select County</label>
                            <div class="">
                                <select class="form-control" id="txtCountyId" name="CountyId">
                                    @if (ViewBag.County != null)
                                    {
                                        foreach (var item in ViewBag.County)
                                        {
                                            <option value="@item.Id">@item.Name</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>


                        <div class="col-md-6 col-sm-6">
                            <label for="middle-name" class="">Upload Files</label>
                            <div class="">
                                <input type="file" id="files" name="AttachmentName" multiple="multiple" class="form-control" />
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Town</label>
                                <input type="email" class="form-control" id="txtTown" name="Town" aria-describedby="emailHelp">
                            </div>
                        </div>

                        <div class="col-sm-10">
                            <label for="middle-name" class="">Select Apartment</label>
                            <div class="">
                                <select class="form-control" id="txtApartmentId" name="ApartmentId" onchange="GetStreams()">
                                    @if (ViewBag.Apartment != null)
                                    {
                                        foreach (var item in ViewBag.Apartment)
                                        {
                                            <option value="@item.Id">@item.Name</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <label for="middle-name" class="">Select Apartment</label>

                            <input type="button" class="btn btn-info" id="btnGetHouse" value="Get House" />
                        </div>


                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="middle-name">
                                    Select House*
                                </label>

                                <select class="form-control" id="txtHouseId" name="HouseId"></select>

                            </div>
                        </div>

                        <br />
                        <br />
                        <br />
                        <br />


                        <div class="col-sm-12">
                            <div class="form-group">
                                <h6 class="Title">Next of Kin Details</h6>
                            </div>
                        </div>


                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="exampleInputEmail1">First Name</label>
                                <input type="email" class="form-control" id="txtKinFirstName" name="KinFirstName" aria-describedby="emailHelp">
                            </div>
                        </div>

                        <div class="col-sm-6">

                            <div class="form-group">
                                <label for="exampleInputEmail1">Last Name</label>
                                <input type="email" class="form-control" id="txtKinLastName" name="KinLastName" aria-describedby="emailHelp">
                            </div>
                        </div>

                        <div class="col-sm-6">

                            <div class="form-group">
                                <label for="exampleInputEmail1">Phone Number</label>
                                <input type="email" class="form-control" id="txtKinPhoneNumber" name="KinPhoneNumber" aria-describedby="emailHelp">
                            </div>
                        </div>



                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="middle-name">Select Relationship</label>
                                <select class="form-control" id="txtKinRelationship" name="KinRelationship">
                                    <option value="Spouse">Spouse</option>
                                    <option value="Son">Son</option>
                                    <option value="Daughter ">Daughter </option>
                                    <option value="Parent ">Parent </option>
                                    <option value="Friend ">Friend </option>
                                </select>

                            </div>
                        </div>

                    </div>


                </form>
            </div>

            <div class="modal-footer mb-1">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                <button type="button" id="btnSubmit" class="btn btn-success">Submit</button>
            </div>

        </div>
    </div>
</div>




<div id="divLoader" style="display:none;" class="loader">
    <img src="~/loaders/loading-23.gif" alt="Loader" style="width:20em;" />
</div>
<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<script src="~/Scripts/jquery-3.5.1.js"></script>
<link href="~/sweetalart/sweetalert.min.css" rel="stylesheet" />
<script src="~/sweetalart/sweetalert.min.js"></script>


<style>

    .success {
        background: #26B99A;
        color: #fff;
    }

    .danger {
        color: #fff;
        background-color: #dc3545;
        border-color: #dc3545;
    }




    .loader {
        position: fixed;
        width: 256px;
        height: 256px;
        top: 50%;
        left: 50%;
        margin: -128px 0 0 -128px;
        z-index: 1000;
    }

    .Title {
        font-weight: 600;
        color: #45ca9f;
        font-size: 1.1rem;
        max-width: calc(100% - 40px);
    }
</style>




<script>

    $(document).ready(function () {

        GetAllData();

    });

    function GetAllData() {


        var t = $('#tblStudents').DataTable({
            "ajax": {
                "url": "/Admin/Tenants/GetTenants",
                "type": "GET",
                "datatype": "json"
            },

            "columns": [

                { "data": "id" },
                { "data": "fullName" },
                { "data": "phoneNumber" },
                { "data": "email" },
                { "data": "countyName" },
                { "data": "createdByName" },
                { "data": "newCreateDate" },




                {
                    data: null,
                    mRender: function (data, type, row) {
                        return "<a href='#' class='btn-sm success'    onclick=GetRecord('" + row.id + "'); >Edit</a> / <a href='#' class='btn-sm btn-info'    onclick=GetDetails('" + row.id + "'); >View Details</a>  /  <a href='#' class='btn-sm danger'    onclick=DeleteRecord('" + row.id + "'); >Delete</a>";

                    }
                }

            ]

        });
        t.on('order.dt search.dt', function () {
            t.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                cell.innerHTML = i + 1;
            });
        }).draw();
    }

    $('#btnSubmit').click(function (evt) {

        if (!$('#txtFirstName').val()) {

            $('#txtFirstName').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "First Name is a required field",
                showConfirmButton: true,
            });
            return false;
        }
        if (!$('#txtLastName').val()) {

            $('#txtLastName').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Last Name is a required field",
                showConfirmButton: true,
            });
            return false;
        }
        if (!$('#txtPhoneNumber').val()) {

            $('#txtPhoneNumber').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Phone Number is a required field",
                showConfirmButton: true,
            });
            return false;
        }
        if (!$('#txtIdNumber').val()) {

            $('#txtIdNumber').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Id Number is a required field",
                showConfirmButton: true,
            });
            return false;
        }
        if (!$('#txtEmail').val()) {

            $('#txtEmail').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Email is a required field",
                showConfirmButton: true,
            });
            return false;
        }
        if (!$('#txtCountyId').val()) {

            $('#txtCountyId').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "County is a required field",
                showConfirmButton: true,
            });
            return false;
        }
        if (!$('#txtTown').val()) {
            $('#txtTown').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Town is a required field",
                showConfirmButton: true,
            });
            return false;
        }
        if (!$('#txtApartmentId').val()) {
            $('#txtApartmentId').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Apartment is a required field",
                showConfirmButton: true,
            });
            return false;
        }
        if (!$('#txtHouseId').val()) {
            $('#txtHouseId').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "House is a required field",
                showConfirmButton: true,
            });
            return false;
        }
        if (!$('#txtKinFirstName').val()) {
            $('#txtKinFirstName').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Next Of Kin First Name is a required field",
                showConfirmButton: true,
            });
            return false;
        }
        if (!$('#txtKinLastName').val()) {
            $('#txtKinLastName').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Next Of Kin Last Name is a required field",
                showConfirmButton: true,
            });
            return false;
        }
        if (!$('#txtKinPhoneNumber').val()) {
            $('#txtKinPhoneNumber').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Next Of Kin Phone Number is a required field",
                showConfirmButton: true,
            });
            return false;
        }
        if (!$('#txtKinRelationship').val()) {
            $('#txtKinRelationship').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Relationship is a required field",
                showConfirmButton: true,
            });
            return false;
        }

        $("#ModalAddTenant").modal('hide');

        $("#divLoader").show();
        // Stop the button from submitting the form:
        evt.preventDefault();

        // Serialize the entire form:


        var formData = new FormData($('#frmAddtenant').get(0));


        $.ajax({
            url: "/Admin/Tenants/Create/",
            type: "POST",
            data: formData,
            processData: false,
            contentType: false,

            success: function (response) {
                if (response.success) {

                    swal({
                        position: 'top-end',
                        type: "success",
                        title: response.responseText,
                        showConfirmButton: false,
                    }), setTimeout(function () { location.reload(); }, 3000);

                } else {

                    swal({
                        position: 'top-end',
                        type: "error",
                        title: response.responseText,
                        showConfirmButton: true,
                        timer: 5000,
                    });

                    $("#divLoader").hide();
                }
            },

            error: function (response) {
                alert("error!");
            },
            complete: function () {
                HideLoader();
            }


        });

    });

    $('#btnGetHouse').click(function (evt) {


        var apartmentId = $('#txtApartmentId').val();

        console.log(apartmentId);

        $.ajax({
            type: "GET",
            url: "/Admin/Tenants/GetHouses/" + apartmentId,
            data: "{}",

            success: function (data) {

                var s = '<option value="-1">Please Select House</option>';

                for (var i = 0; i < data.length; i++) {

                    s += '<option value="' + data[i].houseId + '">' + data[i].houseName + '</option>';
                }

                $("#txtHouseId").html(s);

                console.log(data);
            }


        });

    });









    function DeleteRecord(e) {

        $("#divLoader").show();
        var id = e;

        console.log(id);


        swal(

            {
                title: "Are you sure?",

                text: "Once deleted, you will not be able to recover this  file!",

                type: "success",

                showCancelButton: true,

                confirmButtonColor: "##62b76e",

                confirmButtonText: "Yes, Procceed!",

                closeOnConfirm: false
            },

            function () {

                $.ajax({

                    type: "GET",

                    url: "/Admin/Tenants/Delete/" + id,

                    success: function (response) {

                        if (response.success) {

                            swal({

                                position: 'top-end',

                                type: "success",

                                title: response.responseText,

                                showConfirmButton: false,

                                // timer: 2000,

                            });
                            setTimeout(function () { location.reload(); }, 3000);

                        }

                        else {
                            swal({
                                position: 'top-end',
                                type: "error",
                                title: response.responseText,
                                showConfirmButton: true,
                                timer: 5000,
                            });

                            $("#divLoader").hide();
                        }

                    },
                    error: function (response) {
                        swal({
                            position: 'top-end',
                            type: "error",
                            title: "Server error ,kindly contact the admin for assistance",
                            showConfirmButton: false,
                            timer: 5000,
                        });
                        $("#divLoader").hide();
                    }

                })

            }
        );
    }

    function GetStreams() {

        var apartmentId = $('#txtApartmentId').val();

        console.log(apartmentId);

        $.ajax({
            type: "GET",
            url: "/Admin/Tenants/GetHouses/" + apartmentId,
            data: "{}",

            success: function (data) {

                var s = '<option value="-1">Please Select House</option>';

                for (var i = 0; i < data.length; i++) {

                    s += '<option value="' + data[i].houseId + '">' + data[i].houseName + '</option>';
                }

                $("#txtHouseId").html(s);

                console.log(data);
            }


        });
    }

    //Allow users to enter numbers only
    $(".numericOnly").bind('keypress', function (e) {
        if (e.keyCode == '9' || e.keyCode == '16') {
            return;
        }
        var code;
        if (e.keyCode) code = e.keyCode;
        else if (e.which) code = e.which;
        if (e.which == 46)
            return false;
        if (code == 8 || code == 46)
            return true;
        if (code < 48 || code > 57)
            return false;
    });

    //Disable paste
    $(".numericOnly").bind("paste", function (e) {
        e.preventDefault();
    });

    $(".numericOnly").bind('mouseenter', function (e) {
        var val = $(this).val();
        if (val != '0') {
            val = val.replace(/[^0-9]+/g, "")
            $(this).val(val);
        }
    });



</script>





