                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <form id="frmApartment">

                    <div class="row">


                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Apartment Name</label>
                                <input type="email" class="form-control" id="txtName" name="Name" aria-describedby="emailHelp">
                            </div>
                        </div>


                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="middle-name">Select County</label>
                                <select class="form-control" id="txtCountyId" name="CountyId">
                                    @if (ViewBag.Counties != null)
                                    {
                                        foreach (var item in ViewBag.Counties)
                                        {
                                            <option value="@item.Id">@item.Name</option>
                                        }
                                    }

                                </select>
                            </div>
                        </div>

                        <div class="col-sm-6">

                            <div class="form-group">
                                <label for="exampleInputEmail1">Town</label>
                                <input type="email" class="form-control" id="txtTown" name="Town" aria-describedby="emailHelp">
                            </div>
                        </div>

                        <div class="col-sm-6">

                            <div class="form-group">
                                <label for="exampleInputEmail1">Village / Estate</label>
