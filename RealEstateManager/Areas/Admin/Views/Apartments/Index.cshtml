    function GetApartment(e) {

        var id = e;

        console.log(id);

        $.get("/Admin/Apartments/GetById/?Id=" + id, function (data, status) {

            console.log(data);
            if (data == null) {
                alert("Does not exist");
            } else {

                $("#txtId").val(data.data.id);
                $("#txtName1").val(data.data.name);
                $("#txtCountyId1").val(data.data.countyId);
                $("#txtEstate1").val(data.data.estate);
                $("#txtlandlordId1").val(data.data.landlordId);
                $("#txtPhysicalAddress1").val(data.data.physicalAddress);
                $("#txtTown1").val(data.data.town);



                $('#ModalUpdateApartments').modal({ backdrop: 'static', keyboard: false })
                $("#ModalUpdateApartments").modal('show');
            }

        });
    };



    function GetApartment1(e) {

