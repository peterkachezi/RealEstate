<script>


    $(document).ready(function () {
        GetAllData();

    });

    function GetAllData() {


        var t = $('#tblEmployees').DataTable({
            "ajax": {
                "url": "/Admin/Apartments/GetApartment",
                "type": "GET",
                "datatype": "json"
            },

            "columns": [

                { "data": "id" },
                { "data": "name" },
                { "data": "landlordName" },
                { "data": "town" },
                { "data": "estate" },
                { "data": "physicalAddress" },
                { "data": "countyName" },
                { "data": "createdByName" },
                { "data": "newCreateDate" },

                {
                    data: null,
                    mRender: function (data, type, row) {
                        return "<a href='#' class='btn-sm success'    onclick=GetApartment('" + row.id + "'); >Edit</a> / <a href='#' class='btn-sm success'    onclick=GetApartment1('" + row.id + "'); >Add Houses / Rooms</a>";

                    }
                }

            ]

        });
        t.on('order.dt search.dt', function () {
            t.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                cell.innerHTML = i + 1;
            });
        }).draw();
    }

    $("#btnSubmit").click(function () {

        if ($('#txtName').val() == '') {
            $('#txtName').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Please enter Apartment Name",
                showConfirmButton: true,
            });

            return false;
        }

        if ($('#txtTown').val() == '') {
            $('#txtTown').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Please enter Town",
                showConfirmButton: true,
            });

            return false;
        }

        if ($('#txtEstate').val() == '') {
            $('#txtEstate').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Please enter Estate Name",
                showConfirmButton: true,
            });

            return false;
        }

        if ($('#txtPhysicalAddress').val() == '') {
            $('#txtPhysicalAddress').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Please enter Physical Address",
                showConfirmButton: true,
            });

            return false;
        }

        $("#ModalCreateApartments").modal('hide');

        $("#divLoader").show();

        var formData = new FormData($('#frmApartment').get(0));

        $.ajax({
            type: "POST",
            url: "/Admin/Apartments/Create", // NB: Use the correct action name
            data: formData,
            dataType: 'json',
            contentType: false,
            processData: false,


            success: function (response) {
                if (response.success) {

                    swal({
                        title: "Success!",
                        text: response.responseText,
                        type: "success"
                    }), setTimeout(function () { location.reload(); }, 3000);

                } else {

                    swal({
                        position: 'top-end',
                        type: "error",
                        title: response.responseText,
                        showConfirmButton: true,
                        timer: 5000,
                    });

                }

                $("#divLoader").hide();
            },


            error: function (error) {
                alert("errror");
            }
        });

    });
    $("#btnUpdate").click(function () {

